{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}" style="font-family: 'Roboto Condensed', sans-serif;">
    <header class="post-header">
        <h2 class="post-title" style="font-family: 'Roboto Condensed', sans-serif;"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt" style="font-family: 'Roboto Condensed', sans-serif;">
        <p>{{excerpt words="100"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta" style="background-color:#ffffff; style="font-family: 'Roboto Condensed', sans-serif;"">
        {{#if author.profile_image}}<img class="author-thumb" src="{{author.profile_image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        {{tags prefix=" the "}}
        <time class="post-date" style="font-family: 'Roboto Condensed', sans-serif;" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
